#!/bin/vmd

# system
structure    deca-x.psf
coordinates  deca.pdb

bincoordinates deca31.coor
binvelocities deca31.vel
binindex deca31.idx

# ffield
parameters acemd.prm
exclude scaled1-4
1-4scaling 1.0
pme off
celldimension 65 65 65

switching on
switchdist 10
cutoff 12
vdwforceswitching on ;# charmm function

# integrator
timestep 1

#output
energyfreq 1000
#energyfreq 1
#dcdfreq 1000
outputname deca32

# protocol
temperature 300.0
# Constant Temperature Control
langevin            on
langevindamping     1
langevintemp        300

pluginload smcv libsmcv_acemd.so
pluginarg  smcv input deca.smcv
pluginarg  smcv log deca.smcv.log
pluginfreq 1

run	     100000

