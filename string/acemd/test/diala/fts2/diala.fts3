#
# input file for Struna Plugin via ACEMD
#

output {
 minwarnlev=-1
}

ftsm_init {
 defer_init_dyna=yes ! runs initialization stack at first step of dynamics, when coordinates are available
!=======================
 : init
!======================= atom selection :
 : set orient select atomid 1 5 6 7 9 11 15 16 17 19 end
 : set rmsd   select atomid 1 5 6 7 9 11 15 16 17 19 end
!========================
 : list                      ! list atoms
!========================
 : set mass on      ! turn on mass weighting in RMSD computation and orientation
 : set kpar 50      ! force constant for hyperplanes restraints
 : set dpar 0.5 ! location of hyperplane (different for internal vs. endpoints)
 : set kprp 50      ! default is 0 (no perpendicular restraint)
 : set dprp 2.0     ! default is 1 (unscaled)
 : set proj on      ! forces restrain distance to hyperplane, but not position in the hyperplane (this is needed to compute 1D FE)
! read string coords
 : read txt name diala22_fts_ini.txt from 2  col left
 : read txt name diala22_fts_ini.txt from 3   col center
 : read txt name diala22_fts_ini.txt from 4 col right
 : copy main ref ! not sure that this is needed, since we are not comparing (or changing) string coords

! write string coords
 : write txt name fts3.txt col center
! : write txt name fts2.txt col left
! : write txt name fts4.txt col right

! statistics output
 : stat forc fcnm data/force3.dat - ! output forces
        dist dnam data/proj3.dat    ! projection variables
 : dyna -
    rstr -           ! restrained dynamics 
    stat staf 1000   ! statistics output

}

ftsm_done {
}

