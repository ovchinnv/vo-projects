#!/bin/vmd

# system
structure    deca-x.psf
coordinates  deca.pdb

bincoordinates deca5.coor
binvelocities deca5.vel

# ffield
paratypecharmm on
parameters par_all22_prot.prm
exclude scaled1-4
1-4scaling 1.0
pme off

set sx 65
set sy 65
set sz 65

cellBasisVector1     $sx               0.                          0.
cellBasisVector2     0.                $sy                         0.
cellBasisVector3     0.                0.                          $sz
cellOrigin           0.                0.                          0.

#approx
switching on
switchdist 10
cutoff 12
vdwforceswitching on ;# charmm function

# integrator
timestep 1

#output
outputEnergies      1000
outputTiming        1000

outputname deca6

# Constant Temperature Control
langevin            on
langevindamping     1
langevintemp        300

# Struna plugin
StrunaPlugin on
StrunaConfigFile deca15.22.smcv
StrunaLogFile deca15.22.smcv.log

numsteps	     100000
#



