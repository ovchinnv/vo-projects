#!/bin/vmd


# set system
structure    diala22-x.psf
coordinates  diala22.pdb

# ffield
parameters   par_all22_prot.inp
exclude scaled1-4
1-4scaling 1.0
celldimension 65 65 65
#pme off

#approx
switching on
switchdist 10
cutoff 12

# integrator
timestep 1

#output
#energyfreq 1000

energyfreq 1          ;# this must not be larger than pluginfreq below because the plugin requires energies
energyoutputfreq 1000
dcdfreq 1000           ;# should be able to use tempering output to pair dcd frame with temperature
outputname diala.out

# protocol
temperature 300.0
# Constant Temperature Control
langevin            on
langevindamping     10
langevintemp        300

pluginload string libtemp_acemd.so
pluginarg  string input diala.temp.in
pluginarg  string log   diala.temp.out
pluginfreq 1

seed		31415926535

#run	     10000
#run 2
run 1000000 ;# 100ns
#
