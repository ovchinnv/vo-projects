#define _a1 0.0705230784d0
#define _a2 0.0422820123d0
#define _a3 0.0092705272d0
#define _a4 0.0001520143d0
#define _a5 0.0002765672d0
#define _a6 0.0000430638d0
#define _one 1d0
#define _zero 0d0
#define _isgn(_Y) (INT(sign(_one,_Y)))
