#define _x2(_Y) (_x(_Y)*_x(_Y))
#define _x3(_Y) (_x2(_Y)*_x(_Y))
#define __erfo7(_Y) _isgn(_Y)*(_one - _one/(_one+_a1*_x(_Y)+_a2*_x2(_Y)+_a3*_x3(_Y)+_a4*_x2(_Y)*_x2(_Y)+_a5*_x2(_Y)*_x3(_Y)+_a6*_x3(_Y)*_x3(_Y))**16)
